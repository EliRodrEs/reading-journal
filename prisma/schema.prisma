generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Book {
  id               Int        @id @default(autoincrement())
  title            String
  subtitle         String?
  author           String
  genres           String[]
  hasRepresentation Boolean
  tier             String
  createdAt        DateTime   @default(now())
  review           Review?
}

model Review {
  id  Int @id @default(autoincrement())
  book  Book @relation(fields: [bookId], references: [id])
  bookId Int @unique
  review String
}